{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "rewrites": [
      {
        "source": "/portfolio",
        "destination": "/index.html"
      },
      {
        "source": "/portfolio/**",
        "destination": "/index.html"
      },
      {
        "source": "/files/**",
        "function": "serveFile"
      }
    ],
    "headers": [
      {
        "source": "/files/**",
        "headers": [
          {
            "key": "Content-Disposition",
            "value": "inline"
          },
          {
            "key": "Content-Type",
            "value": "application/pdf"
          }
        ]
      }
    ]
  }
}
